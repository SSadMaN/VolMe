<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="sadman.volme.home">


    <RelativeLayout
        android:id="@+id/bonuses"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorEcology"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/arrow_icon_view"
            android:layout_width="1sp"
            android:layout_height="20sp"
            android:src="@drawable/arrow"
            android:layout_marginTop="18sp"
            android:layout_marginLeft="15sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="8sp"
            android:text="Lviv IT Arena"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/delete_event"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="6dp"
            android:foregroundGravity="right"
            android:src="@drawable/trash" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_event"
        android:layout_below="@id/bonuses"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            tools:text="IT Arena – найграндіозніша ІТ-подія України та Сх. Європи, яка об’єднує програмістів, дизайнерів, топ-менеджерів, PMів, бізнес аналітиків, підприємців та стартаперів для обміну досвідом та обговорення нових ІТ-трендів."
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/organizator"
            android:layout_below="@id/event_quick_description"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="25sp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/organizator_icon"
                android:layout_width="18sp"
                android:layout_height="match_parent"
                android:src="@drawable/org"/>

            <TextView
                android:id="@+id/organizator_text"
                android:layout_toRightOf="@id/organizator_icon"
                android:layout_marginLeft="11sp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:layout_height="match_parent"
                tools:text="Lviv IT Claster"/></RelativeLayout>

        <RelativeLayout
            android:id="@+id/location"
            android:layout_below="@id/event_quick_description"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="18sp"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder_icon"/>

            <TextView
                android:id="@+id/location_textview"
                android:layout_toRightOf="@id/location_icon_view"
                android:layout_marginLeft="30sp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:layout_height="match_parent"
                tools:text="Арена Львів, вулиця Стрийська, 199, Львів"/></RelativeLayout>

        <RelativeLayout
        android:id="@+id/calendar"
        android:layout_below="@id/event_quick_description"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15sp"
        android:layout_marginTop="15sp"
        android:layout_height="20dp">

        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="18sp"
            android:layout_height="match_parent"
            android:src="@drawable/calendar_icon"/>

        <TextView
            android:id="@+id/calendar_text"
            android:layout_toRightOf="@id/calendar_icon_view"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_height="match_parent"
            tools:text="29 вересня - 1 жовтня"/></RelativeLayout>


        <RelativeLayout
            android:id="@+id/tag"
            android:layout_below="@id/event_quick_description"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/tag_icon"
                android:layout_width="18sp"
                android:layout_height="match_parent"
                android:src="@drawable/black_gallon_icon"/>

            <TextView
                android:id="@+id/tag_text"
                android:layout_toRightOf="@id/tag_small_icon_view"
                android:layout_marginLeft="30sp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:layout_height="match_parent"
                tools:text="ІТ"/></RelativeLayout>



    </LinearLayout>

    <Button
        android:id="@+id/button_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorEcology"
        android:text="Підписатись"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white" />




</RelativeLayout>

