<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f2f2"
    tools:context="sadman.volme.ActivityHome">

    <LinearLayout
        android:id="@+id/top_action_bar"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/sign_out"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/exit"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="VolMe"
            android:gravity="center"
            android:textSize="29dp"
            android:fontFamily="@font/brushsci_0"
            android:textColor="@android:color/white"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_below="@id/top_action_bar"
        android:id="@+id/tabs"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="35dp" />



    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/tabs"
        android:layout_above="@id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="22sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/home_interface_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="22sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/heart_icon" />

        <ImageView
            android:id="@+id/openEventAddForm"
            android:layout_width="0dp"
            android:layout_height="22sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/add" />

        <ImageView
            android:id="@+id/bonuses_button"
            android:layout_width="0dp"
            android:layout_height="22sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gift_icon" />



        <ImageView
            android:id="@+id/profile_button"
            android:layout_width="0dp"
            android:layout_height="22sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user_profile_icon"
            android:layout_marginRight="10sp"/>

    </LinearLayout>


</RelativeLayout>

