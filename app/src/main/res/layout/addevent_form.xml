<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">



    <RelativeLayout
        android:id="@+id/bonuses"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Додай свій захід!"
                android:textSize="19sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"

                android:gravity="center"
                android:text="Просто заповни форму нижче і потенційні волонтери побачать твій захід."
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/top_action_bar"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="100sp">

        <EditText
            android:id="@+id/add_event_title_name"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/darker_gray"
            tools:text="Add event title"
            android:textColorHint="@android:color/black"
            android:hint="Add event title"/>

        <EditText
            android:id="@+id/add_organization_name"
            android:layout_below="@id/add_event_title_name"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/darker_gray"
            android:hint="Add event organization name"
            tools:text="Add event organization name"/>

        <EditText
            android:id="@+id/add_event_description"
            android:layout_below="@id/add_organization_name"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/darker_gray"
            android:hint="Add event description"
            android:textColorHint="@android:color/black"
            tools:text="Add event description"/>

        <EditText
            android:id="@+id/add_event_date"
            android:layout_below="@id/add_event_description"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/darker_gray"
            android:hint="Add event date"
            android:textColorHint="@android:color/black"
            tools:text="Add event date"/>

        <EditText
            android:id="@+id/add_event_tag"
            android:layout_below="@id/add_event_date"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/darker_gray"
            android:hint="Add event tag"
            android:textColorHint="@android:color/black"
            tools:text="Add event tag"/>

        <EditText
            android:id="@+id/add_event_location"
            android:layout_below="@id/add_event_tag"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/black"
            android:hint="Add event location"
            tools:text="Add event location"/>

        <Button
            android:id="@+id/submit_event_form"
            android:layout_margin="20dp"
            android:layout_below="@id/add_event_location"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Опублікувати"/>

    </RelativeLayout>


</RelativeLayout>
